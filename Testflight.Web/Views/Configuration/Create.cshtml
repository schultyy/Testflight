@using Testflight.Web.Extensions
@model TestFlight.Configuration.Configuration
@{
    ViewBag.Title = "Create";
}
<h2>
    Create</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Configuration</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.BaseDirectory)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BaseDirectory)
            @Html.ValidationMessageFor(model => model.BaseDirectory)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.SolutionFile)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SolutionFile)
            @Html.ValidationMessageFor(model => model.SolutionFile)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Target)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Target)
            @Html.ValidationMessageFor(model => model.Target)
        </div>
        <div class="editor-field">
            @Html.LabelFor(model => model.BuildConfiguration)
        </div>
        <div class="editor-field">
            @Html.EnumDropDownListFor(model => model.BuildConfiguration, "Please select a build configuration")
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
